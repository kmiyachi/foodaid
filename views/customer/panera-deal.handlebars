<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h3 class="center-text">9777 Genessee Avenue</h3>
            <hr/>
        </div>
        <div class="col-xs-12">
            <img class="img-responsive" src="/images/food-bread.jpg"/>
            <hr/>
        </div>

        <div class="col-xs-12">
            <div class="col-xs-4">
                <p class="form-text-right">Company: </p>
            </div>
